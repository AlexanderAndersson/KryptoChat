<div class="container usernameDiv">
    <div class="col-md-4 col-md-offset-4">
        <input type="text" name="pUsername" placeholder="Enter Username"/>
        <button type="button" id="enterUser">Enter</button>
    </div>
</div>
<div class="container">
    <div id="ChatShit" class="">
        <div id="key" class="justify-content-center">
            <label for="pKey" id="keyLabel">Key</label>
            <input id="keyBox" autofocus type="text" name="pKey" value="@Session["key"]" />
        </div>
        <div class="chatContainer pre-scrollable col-lg-8 col-md-8 col-sm-8 col-xs-12">
            <div class="newMessage"></div>
        </div>
        <div class="">
            <textarea type="text" class="col-lg-7 col-md-7 col-sm-7 col-xs-10" draggable="false" rows="4" name="pMessage" id="messageBox"></textarea>
            <button id="sendMsgBtn" class="col-lg-1 col-md-1 col-sm-1 col-xs-2">Send</button>
        </div>
    </div>
    <div class="villainContainer hidden-xs col-lg-3 col-md-3 col-sm-3">
        <h4>Villain of the second</h4>
        <h3 id="villainName"><span class="villainSpan">Dr Mugg</span></h3>
    </div>
</div>

<script src="~/Scripts/AwesomeScripts.js"></script>